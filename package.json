{
  "name": "semver-resolver",
  "version": "0.2.0",
  "description": "Calculate an 'optimal' solution for a dependency tree using semantic versioning",
  "main": "lib/index.js",
  "scripts": {
    "mocha": "mocha --compilers js:babel-register --recursive --reporter spec",
    "lint": "eslint src/** test/**",
    "pretest": "npm run lint",
    "test": "babel-node ./node_modules/.bin/isparta cover --report lcov --report text --report html _mocha -- --recursive --reporter spec",
    "posttest": "istanbul check-coverage --statement 100 --functions 100 --branches 100 --lines 100",
    "prebuild": "npm test",
    "build": "babel src -d lib",
    "watch": "watch 'npm -s test' src test",
    "preci": "npm test",
    "ci": "cat ./coverage/lcov.info | coveralls",
    "precheckunstaged": "npm run build",
    "checkunstaged": "echo 'Check for unstaged changes outside lib folder' && git diff --exit-code -- . ':!lib' > /dev/null",
    "precheckuncommitted": "npm run checkunstaged",
    "checkuncommitted": "echo 'Check for staged but uncommitted changes outside lib folder' && git diff --cached --exit-code -- . ':!lib' > /dev/null",
    "precommitlib": "npm run checkuncommitted",
    "commitlib": "git add -A lib && (git commit -m 'build lib' > /dev/null || true)",
    "prepush": "npm run commitlib",
    "push": "git push",
    "pretag": "npm run push",
    "tag": "git tag v$npm_package_version && git push --tags",
    "prerelease": "npm run tag",
    "release": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pghalliday/semver-resolver.git"
  },
  "keywords": [
    "semver",
    "recursive"
  ],
  "author": "Peter Halliday <pghalliday@gmail.com> (http://pghalliday.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pghalliday/semver-resolver/issues"
  },
  "homepage": "https://github.com/pghalliday/semver-resolver#readme",
  "dependencies": {
    "lodash": "^4.5.0",
    "semver": "^5.1.0",
    "uuid": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "coveralls": "^2.11.6",
    "eslint": "^2.1.0",
    "eslint-config-google": "^0.4.0",
    "eslint-plugin-mocha": "^2.0.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "watch": "^0.17.1"
  }
}
